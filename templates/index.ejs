<% articles.forEach(function (article) { %>
  <% if (article.hidden) return %>
  <div class="article">
    <div class="title">
      <h1><a href="<%= article.route %>"><%= article.title %></a></h1>
    </div>

    <div class="content">
      <p><%- article.description || article.summary %></p>
    </div>

    <div class="more">
      <a href="<%= article.route %>">read on &raquo;</a>
    </div>
  </div>
<% }) %>
